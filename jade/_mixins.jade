//- Page title
mixin page-title(title, bg)
  //- Page title
  section.section-30.section-sm-40.section-md-66.section-lg-bottom-90.bg-gray-dark.page-title-wrap(style='background-image: url(images/' + bg + '.jpg);')
    .shell
      .page-title
        h2=title
  ='\n'

//- Thumbnail flickr
mixin flickr-item
  .flickr-item(data-type="flickr-item")
    a.thumbnail.thumbnail-flickr(data-image_b="href", data-photo-swipe-item)
      figure
        img(src='images/_blank.png', data-image_z="src" data-title="alt", width='165', height='165', alt='')
      .thumbnail-overlay

//- Pagination
mixin pagination
  ul.pagination-custom
    li: a(href='#') Prev
    li: a(href='#') 1
    li: a(href='#') 2
    li.active: a(href='#') 3
    li: a(href='#') 4
    li: a(href='#') Next

//- Social list
mixin social-links
  ul.list-inline
    li: a(href='#'): span.icon.icon-xs.icon-default.fa-facebook
    li: a(href='#'): span.icon.icon-xs.icon-default.fa-twitter
    li: a(href='#'): span.icon.icon-xs.icon-default.fa-pinterest
    li: a(href='#'): span.icon.icon-xs.icon-default.fa-instagram

mixin table(classes)
  .table-responsive
    table.table(class=classes)
      thead
        tr
          th Column 1
          th Column 2
          th Column 3
          th Column 4

      tbody
        tr
          td Item #1
          td Description
          td Subtotal
          td $3.00
        tr
          td Item #2
          td Description
          td Discount
          td $3.00
        tr
          td Item #3
          td Description
          td Shipping
          td $3.00

        tr
          td Item #4
          td Description
          td Tax
          td $4.00

      tfoot
        tr
          td All Items
          td Description
          td Your Total
          td $13.00