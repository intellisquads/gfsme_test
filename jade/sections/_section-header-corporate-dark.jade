              li
                .unit.unit-horizontal.unit-spacing-xs
                  .unit-left
                    span.icon.icon-xxs-small.icon-primary.material-icons-place.icon-shift-1
                  .unit-body
                    a.link-white-v2.reveal-inline(href='#')=globals.address

              li
                .unit.unit-horizontal.unit-spacing-xs
