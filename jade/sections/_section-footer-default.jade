include ../elements/_ui-post-preview
//- Default footer
section.section-40.section-sm-75.bg-cello
  .shell
    .range.range-xs-center
      .cell-xs-9.cell-sm-11.cell-lg-12
        .range
          .cell-sm-6.cell-md-10.cell-lg-3
            .inset-lg-right-20(style='max-width: 510px;')
              //- Brand
              a.brand.brand-inverse(href='index.html')
                img(src="images/brand-footer.png", width="118", height="34", alt="")
              p.offset-top-22.text-spacing--30.text-kashmir-blue.
                If you or your business is facing a legal
                challenge that calls for sound advice and skilled representation, contact us today to arrange a free  consultation with an us.
              a.link.link-group.link-group-animated.link-black.link-white(href=globals.getTemplateLink)
                span Free Consultation
                span.icon.icon-xxs.icon-primary.fa.fa-angle-right

          .cell-sm-6.cell-md-4.cell-lg-3.offset-top-50.offset-sm-top-0.offset-md-top-50.offset-lg-top-0
            h6.h6 Recent Posts
            .offset-top-22.offset-md-top-30
              +post-preview({
                classes: ['post-preview-inverse', 'offset-top-22'],
                img: 'post-preview-7-70x70',
                header: 'A Look into Nonprofit Risk Management',
                time: ['2016-02-04', 'June 23, 2016 ']
              })

              +post-preview({
                classes: ['post-preview-inverse', 'offset-top-22'],
                img: 'post-preview-8-70x70',
                header: 'Workers’ Compensation: Combinability of Insureds',
                time: ['2016-02-04', 'June 20, 2016']
              })

          .cell-sm-6.cell-md-4.cell-lg-3.offset-top-50.offset-lg-top-0
            h6.h6 Quick links
            .row.offset-top-22.offset-md-top-30(style='max-width: 270px;')
              .col-xs-6
                ul.list-marked-variant-2
                  li: a(href='index.html') Home
                  li: a(href='services.html') Services
                  li: a(href='gallery-item.html') Cases
                  li: a(href='blog-classic.html') Blog

              .col-xs-6
                ul.list-marked-variant-2
                  li: a(href='about-us.html') About us
                  li: a(href='contacts-us.html') Contacts
                  li: a(href='appointment.html') Appointment

          .cell-sm-6.cell-md-4.cell-lg-3.offset-top-50.offset-lg-top-0
