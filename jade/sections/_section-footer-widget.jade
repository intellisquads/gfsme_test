    hr

  section.section-35
    .shell.text-center
      .range.range-sm-reverse.range-sm-justify.range-sm-middle
        .cell-sm-6.text-sm-right
          .group-sm.group-middle
            p.text-italic.text-white Follow Us:
            ul.list-inline.list-inline-reset
              li: a.icon.icon-circle.icon-gray-dark-filled.icon-xxs-smallest.fa.fa-facebook(href='#')
              li: a.icon.icon-circle.icon-gray-dark-filled.icon-xxs-smallest.fa.fa-twitter(href='#')
              li: a.icon.icon-circle.icon-gray-dark-filled.icon-xxs-smallest.fa.fa-google-plus(href='#')

