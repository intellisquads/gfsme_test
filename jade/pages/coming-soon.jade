extends  ../_skeleton

block variables
  - var pageName = 'Coming soon'
  - var bodyClass = ['one-screen-page', 'bg-gray-darker', 'bg-image'];
  - var bodyImage = 'bg-coming-soon'

block title
  title=pageName

block page
  .page-inner
    //- Page Header
    include ../sections/_section-header-base-transparent



    section.text-center
      .shell
        .range.range-sm-center
          .cell-sm-12
            h3.text-spacing--25.text-bold
              | We're Getting Ready
              br
              | to launch in
            .block-centered.offset-top-30.offset-sm-top-60
              //- Countdown
              .countdown.countdown-default.countdown-inverse(data-type='until', data-time='31 Dec 2017 16:00', data-format='dhms')

            p.text-white.offset-top-30(style='opacity: 0.8;')
              | Our website is under construction, we are working very hard
              br.veil.reveal-xs-block
              |  to give you the best experience on our new web site.

          .cell-sm-6.cell-md-5.cell-lg-4.offset-top-40.offset-sm-top-60.offset-xl-top-120
              h5 Stay ready, we`re launching soon
              //- RD Mailform
              form.rd-mailform.form-modern.form-inverse.offset-top-40(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
                .form-group
                  label.form-label(for="contact-email") Email
                  input#contact-email.form-control(type="email" name="email" data-constraints="@Email @Required")
                button(type="submit").btn.btn-primary.btn-block.offset-top-30 Subscribe
    ='\n'

    //- Page Footer
    include ../sections/_section-footer-base-transparent